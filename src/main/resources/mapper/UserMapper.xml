<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.roymark.queue.dao.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.roymark.queue.entity.ActionUser">
        <id column="user_hidden_id" property="userHiddenId" />
        <result column="user_id" property="userId" />
        <result column="user_name" property="userName" />
        <result column="user_pwd" property="userPwd" />
        <result column="user_sex" property="userSex" />
        <result column="user_department" property="userDepartment" />
        <result column="user_post" property="userPost" />
        <result column="user_photo" property="userPhoto" />
        <result column="window_hidden_id" property="windowHiddenId" />
        <result column="window_id" property="windowId" />
    </resultMap>


    <!-- 通用查询结果列 -->
    <select id="getAllUser" resultMap="BaseResultMap">
        SELECT * FROM user NATURAL JOIN window
    </select>

    <select id="getUserByHiddenId" parameterType="long" resultMap="BaseResultMap">
        SELECT * FROM user NATURAL JOIN window WHERE user_hidden_id = #{VALUE }
    </select>

    <select id="page" resultMap="BaseResultMap">
        SELECT user.* , window.window_id FROM user NATURAL JOIN window ${ew.customSqlSegment}
    </select>

</mapper>
